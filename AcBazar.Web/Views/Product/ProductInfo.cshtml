@model List<Product>
@{
    ViewBag.Title = "ProductInfo";
}

<div id="SearchProduct">
    <header>
        @Scripts.Render("~/Content/javascript/jquery.min.js")
    </header>
    <section class="flat-row flat-contact">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="title-section margin_bottom_17">
                        <h2 class="title">
                            Product Information
                        </h2>
                    </div><!-- /.title-section -->
                </div><!-- /.col-md-12 -->
            </div><!-- /.row -->
        </div><!-- /.row -->
    </section>
    <div class="container">

        <div class="row">
            @*<div class="col-md-4">*@
            <div class="col-md-12">
                <table border="1" class="table table-striped">
                    <thead>
                        <tr>
                            <td>Brand</td>
                            <td>Category</td>
                            <td>Name</td>
                            <td>Description</td>
                            <td>Price</td>
                            <td>Image</td>
                            <td>Action</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>@product.Brand.Name</td>
                                <td>@product.Category.Name</td>
                                <td>@product.Name</td>
                                <td>@product.Description</td>
                                <td>@product.Price</td>
                                <td><img src="@product.ImageURL" /></td>
                                <td>
                                    <button class="btnClassEdit" type="button" data-id="@product.ID">Edit</button>
                                    <button class="btnClassDelete" type="button" data-id="@product.ID">Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                @*</div>*@
            </div>
        </div>
    </div>

        <script>
            $(".btnClassEdit").click(function () {
                $.ajax({
                    type: "GET",
                    url: '/Product/Edit',
                    data: {
                        ID: $(this).attr("data-id")
                    }
                })
                    .done(function (data) {
                        $("#ActionContainer").html(data);
                        focusaction();
                    })
                    .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                        alert('Failed');
                    });
            });

            function focusaction() {
                $('html, body').animate({
                    scrollTop: $("#ActionContainer").offset().top - 100
                }, 1000);
            }
        </script>

        <script>
            $(".btnClassDelete").click(function () {
                var result = confirm("Want to delete?");
                if (result) {
                    //Logic to delete the item

                    $.ajax({
                        type: "GET",
                        url: '/Product/Delete',
                        data: {
                            ID: $(this).attr("data-id")
                        }
                    })
                        .done(function (data) {
                            $("#SearchProduct").html(data);
                        })
                        .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                            alert('Failed');
                        });
                }
            });

          

        </script>

    
    </div>
